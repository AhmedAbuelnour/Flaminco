<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Version>1.0.3</Version>
		<Authors>Ahmed Abuelnour</Authors>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<Company>Personal</Company>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Description>
			A lightweight, flexible .NET package for effortlessly scheduling and managing cron-based background jobs, designed to bring precision and reliability to your periodic tasks.
		</Description>
		<PackageIconUrl>https://img.icons8.com/color/200/fan-2.png</PackageIconUrl>
		<Copyright>
			Copyright (c) 2025, Ahmed Abuelnour
		</Copyright>
	</PropertyGroup>

	
	<ItemGroup>
		<None Include="README.md" Pack="true" PackagePath=""/>
	</ItemGroup>

  <ItemGroup>
    <PackageReference Include="Cronos" Version="0.10.0" />
	  <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="9.0.4" />
  </ItemGroup>

</Project>
