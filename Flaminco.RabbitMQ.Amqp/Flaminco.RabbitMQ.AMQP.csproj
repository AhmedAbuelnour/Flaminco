<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net10.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <Version>3.0.0</Version>
        <Authors>Ahmed Abuelnour</Authors>
        <Company>Flaminco</Company>
        <Description>
            Flaminco.RabbitMQ.AMQP is a powerful, modern .NET library that provides a clean abstraction layer over RabbitMQ.Client 7.2. 
            Features include: fluent configuration, automatic connection recovery, publisher confirms, consumer retry policies, 
            dead-letter queue support, exchange/queue/binding declarations, pluggable serialization, and health checks.
        </Description>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageIcon></PackageIcon>
        <PackageTags>rabbitmq;amqp;messaging;queue;asp.net-core;dotnet</PackageTags>
        <RepositoryUrl>https://github.com/AhmedAbuelnour/Flaminco.RabbitMQ.AMQP</RepositoryUrl>
        <Copyright>Copyright (c) 2026, Ahmed Abuelnour</Copyright>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="RabbitMQ.Client" Version="7.2.0" />
        <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="10.0.3" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="10.0.3" />
        <PackageReference Include="Microsoft.Extensions.Diagnostics.HealthChecks" Version="10.0.3" />
        <PackageReference Include="Microsoft.Extensions.Options" Version="10.0.3" />
        <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="10.0.3" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="10.0.3" />
    </ItemGroup>

    <ItemGroup>
        <None Include="README.md" Pack="true" PackagePath="" />
    </ItemGroup>

</Project>
